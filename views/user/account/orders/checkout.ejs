<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Cart</title>
    <%- include("../../../partials/head") %>
    <link rel="stylesheet" href="/styles/userPages/checkout.css" />
  </head>
  <body>
    <%- include("../../../partials/userHeader") %>

    <div class="page-wrapper">
      <div class="content-wrapper">
        <div class="container-fluid cart-page-container">
          <div class="page-title d-flex justify-content-between">
            <h3 class="cart-title">Checkout User</h3>
            <button id="backBtn">
              <i class="fa-solid fa-circle-arrow-left"></i>Go Back
            </button>
          </div>
          <!-- container  -->
          <div class="checkout-container container-fluid d-flex gap-4">
            <!-- address section  -->
            <div class="address-section flex-grow-1 overflow-auto content-area">
              <div class="address-head d-flex justify-content-between">
                <p class="address-title">Select Delivery Address</p>
                <button id="addAddressBtn" onclick="newAddressClicked()"><i class="fa-solid fa-plus"></i>Add Another Address</button>
              </div>
              <div class="address-wrapper mt-3" id="addressContainer">
                <!-- addres card  -->
                <div class="card shadow p-4 w-100">
                  <div
                    class="d-flex justify-content-between align-items-center"
                  >
                    <div>
                      <h5 class="fw-bold">John Doe</h5>
                      <p class="mb-1">
                        <i class="fas fa-phone"></i> +123 456 7890
                      </p>
                      <p class="mb-0">
                        <i class="fa-solid fa-location-dot"></i> 123 Main Street, City,
                        Country
                      </p>
                    </div>

                    <div class="d-flex align-items-center gap-3">
                      <input type="checkbox" class="form-check-input" />

                      <button id="editAddressBtn">
                        <i class="fas fa-edit"></i>
                      </button>
                    </div>
                  </div>
                </div>

              </div>
            </div>
            <div class="price-section">
              <div class="coupon-form">
                <form id="couponForm">
                  <div >
                    <input type="text" name="" id="couponInput" placeholder="Enter coupon code here...">
                    <small class="text-danger" id="couponError"></small>
                  </div>
                  <button type="submit" class="apply-btn">Applay</button>
                </form>
              </div>

              <div class="payment-section mt-3 card shadow">
                <div class="to-pay">
                  <p class="payment-label">Total Payable</p>
                  <p class="payment-label" id="payableAmount"></p>
                </div>
                <!-- <small class="text-success">5% Off 1 Coupon Applied</small> -->

                <div class="payment-method mt-4">
                  <p>Select Payment Method</p>
                  <div class="form-check mt-2">
                    <input class="form-check-input" type="radio" name="paymentMethod" id="cashOnDelivery" value="COD" />
                    <label class="form-check-label" for="cashOnDelivery">Cash on Delivery</label>
                  </div>
                  <div class="form-check mt-2">
                    <input class="form-check-input" type="radio" name="paymentMethod" id="onlinePayment" value="Online" />
                    <label class="form-check-label" for="onlinePayment">Online Payment</label>
                  </div>
                </div>

                <button id="placeOrderBtn">Place The Order</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include("../../../partials/userFooter") %>
    <script src="/javascripts/apiCalls/common.js"></script>
    <script src="/javascripts/user/checkout.js"></script>
  </body>
</html>
