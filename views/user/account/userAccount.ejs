<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Personal Details</title>
    <link rel="stylesheet" href="/styles/account.css" />
    <link rel="stylesheet" href="/styles/userPages/personalDetails.css" />
    <%- include("../../partials/head") %>
  </head>
  <body>
    <%- include("../../partials/userHeader") %>

    <div class="account-wrapper page-wrapper">
      <div class="content-wrapper profile-container">
        <%- include("../../partials/userSidebar") %>

        <div class="profile-data">
          <div class="profie-content-wrapper">
            <div class="content-section">
              <div class="account-title">
                <p class="page-title">Personal Details</p>
                <button id="editBtn"><i class="fas fa-pen"></i> Edit</button>
              </div>
              <form class="personal-details-form" id="detailsForm">
                <div class="form-inputs">
                  <div class="form-group">
                    <label for="name">Name</label>
                    <input
                      type="text"
                      id="name"
                      name="name"
                      placeholder="Enter your name"
                      readonly
                    />
                    <small class="text-danger" id="nameError"></small>
                  </div>

                  <div class="form-group">
                    <label for="phone">Phone</label>
                    <input
                      type="tel"
                      id="phoneNumber"
                      name="phone"
                      placeholder="Enter your phone number"
                      readonly
                    />
                    <small class="text-danger" id="phoneNumberError"></small>
                  </div>

                  <div class="form-group">
                    <label for="email">Email</label>
                    <input
                      type="email"
                      id="email"
                      name="email"
                      placeholder="Enter your email"
                      readonly
                    />
                    <small class="text-danger" id="emailError"></small>
                  </div>

                  <div class="form-group">
                    <label for="dob">Date of Birth</label>
                    <input type="date" id="dob" name="dob" readonly />
                    <small class="text-danger" id="dobError"></small>
                  </div>
                </div>

                <small class="text-danger" id="serverError"></small>
                <button type="submit" class="submit-btn" id="detailsSaveBtn"><i class="fa-solid fa-floppy-disk"></i>Save</button>
              </form>
            </div>

            <div class="content-section mt-3">
              <div class="account-title">
                <p class="page-title">Change Password</p>
                <button id="savePassBtn"><i class="fa-solid fa-floppy-disk"></i></button>
              </div>
              <small class="text-danger" id="passServerMsg"></small>

              <form class="change-password-form" id="passwordForm">
                <div class="form-inputs">


                <div class="form-group">
                  <label>Old Password</label>
                  <input
                    type="password"
                    id="oldPassword"
                    placeholder="Enter old password"
                  />
                  <small class="text-danger" id="oldPassError"></small>
                </div>

                <div class="form-group">
                  <label>New Password</label>
                  <input
                    type="password"
                    id="newPassword"
                    placeholder="Enter new password"
                  />
                  <small class="text-danger" id="newPassError"></small>
                </div>

                <div class="form-group">
                  <label>Confirm Password</label>
                  <input
                    type="password"
                    id="confirmPassword"
                    placeholder="Confirm new password"
                  />
                  <small class="text-danger" id="confirmPassError"></small>
                </div>

              </div>
              <button type="submit" class="submit-btn" id="passwordSaveBtn"><i class="fa-solid fa-floppy-disk"></i>Save</button>

              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include("../../partials/userFooter") %>
    <script src="/javascripts/apiCalls/common.js"></script>
    <script src="/javascripts/user/personalDetails.js"></script>
  </body>
</html>
