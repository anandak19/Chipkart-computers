<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Orders</title>
    <link rel="stylesheet" href="/styles/account.css" />
    <link rel="stylesheet" href="/styles/userPages/orders.css" />
    <%- include("../../partials/head") %>
  </head>
  <body>
    <%- include("../../partials/userHeader") %>

    <div class="account-wrapper page-wrapper">
      <div class="content-wrapper profile-container">
        <%- include("../../partials/userSidebar") %>

        <div class="profile-data">
          <div class="profie-content-wrapper">
            <div class="content-section">
              <div class="account-title">
                <p class="page-title">My Orders</p>
              </div>
              <!-- orders wrapper  -->
              <div class="container">
                <div class="order-card row">
                    <!-- Left Section: Products -->
                    <div class="col-md-6">
                        <div class="products-list">
                            <!-- Product 1 -->
                            <div class="item-section d-flex align-items-center">
                                <div class="item-image">
                                    <img src="/images/sample-product.jpg" alt="Acer Nitro Laptop">
                                </div>
                                <div class="item-details">
                                    <p class="product-name">Acer Nitro Laptop</p>
                                    <p class="product-quantity">Quantity: 2 Pcs</p>
                                    <p class="product-price">₹60,000</p>
                                </div>
                            </div>
            
                            <!-- Product 2 -->
                            <div class="item-section d-flex align-items-center">
                                <div class="item-image">
                                    <img src="/images/sample-product.jpg" alt="Apple MacBook">
                                </div>
                                <div class="item-details">
                                    <p class="product-name">Apple MacBook</p>
                                    <p class="product-quantity">Quantity: 1 Pc</p>
                                    <p class="product-price">₹1,20,000</p>
                                </div>
                            </div>
            
                            <!-- Product 3 -->
                            <div class="item-section d-flex align-items-center">
                                <div class="item-image">
                                    <img src="/images/sample-product.jpg" alt="Samsung Galaxy Phone">
                                </div>
                                <div class="item-details">
                                    <p class="product-name">Samsung Galaxy Phone</p>
                                    <p class="product-quantity">Quantity: 1 Pc</p>
                                    <p class="product-price">₹45,000</p>
                                </div>
                            </div>
                        </div>
                    </div>
            
                    <!-- Right Section: Address & Status -->
                    <div class="col-md-6 address-section">
                        <p class="order-status">Status: <span class="text-primary">Shipped</span></p>
                        <p class="delivery-label">Delivery To:</p>
                        <p class="delivery-address">Some random address which is very long and descriptive.</p>
                    </div>
                </div>
            </div>
            
              
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include("../../partials/userFooter") %>
    <script src="/javascripts/user/orders.js"></script>
  </body>
</html>
