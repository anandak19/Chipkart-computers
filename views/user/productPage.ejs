<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Products</title>
    <%- include("../partials/head") %>
    <link rel="stylesheet" href="/styles/products.css" />
  </head>
  <body>
    <%- include("../partials/userHeader") %>

    <div class="page-wrapper content-wrapper">
      <div class="container">
        <!-- Side Panel -->
        <div class="side-panel">
          <div class="category-section">
            <h3>Shop by Category</h3>
            <ul id="categoryList">
              <!-- loop this later  -->
              <% categoryArray.forEach((category) => { %>
              <li data-id="<%= category.id %>"><%= category.categoryName %></li>
              <% }) %>
            </ul>
          </div>
          <div>
            <h3>Filters</h3>
            <div class="filter">
              <label for="priceOrder">Price Order</label>
              <select id="priceOrder">
                <option value="">Select</option>
                <option value="asc">Low to High</option>
                <option value="desc">High to Low</option>
              </select>
            </div>
            <div class="filter">
              <label for="rating">Rating</label>
              <select id="rating">
                <option value="">Select</option>
                <option value="4">4 Stars & Up</option>
                <option value="3">3 Stars & Up</option>
                <option value="2">2 Stars & Up</option>
              </select>
            </div>
            <div class="filter">
              <label
                ><input type="checkbox" id="isFeatured" />Featured Products
                Only</label
              >
            </div>
            <div class="filter">
              <label
                ><input type="checkbox" id="isNew" />New Arrivals Only</label
              >
            </div>
            <div class="filter">
              <label
                ><input type="checkbox" id="isPopular" />Popular Products
                Only</label
              >
            </div>
          </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
          <div class="top-bar">
            <div class="sort-filter">
              <label for="sortBy">Sort By</label>
              <select id="sortBy">
                <option value="">Select</option>
                <option value="a-z">Sort by A-Z</option>
                <option value="z-a">Sort by Z-A</option>
              </select>
            </div>
            <p id="resultCount"></p>
          </div>
          <div class="product-grid" id="productList">
            <div class="product-card">
              <div class="product-card-image">
                <img src="/images/default/default.jpg" alt="Loding.." />
              </div>
              <div class="product-card-details">
                <h4>
                  <a href="#">Loding..</a>
                </h4>
                <div class="price">
                  <p class="selling-price">Loding..</p>
                </div>
              </div>
              <div class="product-actions">
                <button class="add-cart">Loding..</button>
                <button class="wishlist">Loding..</button>
              </div>
            </div>
          </div>
          <!-- pagination  -->
          <div class="pagination">
            <button id="prevBtn">Prev</button>
            <button id="nextBtn">Next</button>
          </div>
        </div>
      </div>
    </div>

    <%- include("../partials/userFooter") %>

    <script src="/javascripts/apiCalls/productPage.js"></script>
  </body>
</html>
