<header>
    <div class="header-top">
        <div class="welcome-text">
            <p>Welcome&nbsp;<%= user ? user.name : 'User' %></p>
        </div>
        <div class="contact-details">
            <p>admin@chipkart.com</p>
            <p>+91 9544928733</p>
        </div>
    </div>

    <div class="header-main">
        <div class="branding">
            <a href="/">
                <h1>ChipKart Computers</h1>
            </a>
        </div>

        <% var isAuth = typeof isAuth !== "undefined" ? isAuth : false; %>

        <% if (!isAuth) { %>
            <div class="user-side">
                <a href="/account" class="account">
                    <img src="/images/icons/User.png" alt="">
                    <p>Account</p>
                </a>
          
                <div class="user-collection">
                    <a href="" class="wishlist">
                        <img src="/images/icons/Heart-white.png" alt="">
                    </a>
                    <a href="/cart" class="cart">
                        <span class="cart-count" id="cartCount">0</span>
                        <img src="/images/icons/ShoppingCart-white.png" alt="">
                    </a>
                </div>
            </div>
          <% } %>
          


    </div>

    <nav>
        <div class="browse-category">
            <img src="/images/icons/category-Left-white.png" alt="">
            <p>BROWSE ALL CATEGORY</p>
            <img src="/images/icons/Expand-Arrow-down-white.png" alt="">
        </div>
        <div class="nav-links">
            <ul>
                <li><a href="/">HOME</a></li>
                <% if (!isAuth) { %>
                <li><a href="/account/orders">My Orders</a></li>
                <% } %>
                <li><a href="/products">ALL PRODUCTS</a></li>
            </ul>
        </div>
    </nav>
    <div class="category-dropdown">
        <ul class="category-list">
          <li><a href="/products">Laptops</a></li>
          <li><a href="/products">PC Components</a></li>
          <li><a href="/products">Pre Built PC</a></li>
          <li><a href="/products">Gaming Gears</a></li>
          <li><a href="/products">Accessories</a></li>
        </ul>
      </div>
      
</header>