<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="/styles/admin.css" />
  </head>
  <body>
    <!-- Sidebar -->
    <div class="sidebar">
      <h3 class="text-white text-center">Chipkart Admin</h3>
      <a href="/admin"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
      <a href="/admin/users" class="sidebar-active"
        ><i class="fas fa-users"></i> User Management</a
      >
      <a href="/admin/products"
        ><i class="fas fa-cogs"></i> Product Management</a
      >
      <a href="/admin/categories"
        ><i class="fas fa-tags"></i> Category Management</a
      >
      <a href="/admin/offers"><i class="fas fa-gift"></i> Offer Module</a>
      <a href="/admin/orders"><i class="fas fa-box"></i> View Orders</a>
      <a href="/admin/reports"
        ><i class="fas fa-chart-line"></i> Sales Report</a
      >
      <a href="/admin/coupons"><i class="fas fa-gift"></i> Coupon Management</a>
    </div>

    <!-- Main Content -->
    <div class="content-wrapper">
      <!-- Navbar -->
      <%- include("../partials/adminHeader") %>

      <div class="main-content">
        <div class="search-box">
          <form class="search-form">
            <input
              type="search"
              id="searchQuery"
              placeholder="Search user"
            />
            <button type="submit">Search</button>
            <small id="errorMessage" class="text-danger"></small>
          </form>
          <div class="reset-btn">
            <a href="/admin/users">Get all users</a>
          </div>
        </div>
        <table class="table">
          <thead>
            <tr>
              <th>No</th>
              <th>Name</th>
              <th>Email</th>
              <th>Phone Number</th>
              <th>Is Verified</th>
              <th>Created At</th>
              <th>Is Blocked</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody id="userTable">
            <!-- show the table row with data  -->
          </tbody>
        </table>

        <div class="pagination">
          <div class="pagination-btns">
            <button class="prev-btn">
              <i class="fa-solid fa-chevron-left"></i>
            </button>
            <button class="next-btn">
              <i class="fa-solid fa-chevron-right"></i>
            </button>
          </div>
        </div>
        

      </div>

      <div id="customDialog" class="dialog">
        <div class="dialog-content">
          <p>Blocking:&nbsp;<span id="blockUserName"></span></p>
          <form id="blockUserForm">
            <label for="blockReason">Why are you blocking this user?</label>
            <p class="errorText"><small id="resonError" class="text-danger"></small></p>
            <p class="errorText"><small id="resonSuccess" class="text-success"></small></p>
            
            <input
              type="text"
              id="blockReason"
              placeholder="Enter reason..."
            />
            <button type="submit" id="blockButton">Block</button>
            <button type="button" id="cancelButton">Cancel</button>
          </form>
        </div>
      </div>
    </div>

    <script src="/javascripts/admin/management.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    <script src="/javascripts/admin/userManagement.js"></script>
    <script>
      function confirmToggleBlock(event, form) {
        const actionText = form.querySelector("button").textContent.trim();
        const confirmAction = window.confirm(
          `Are you sure you want to ${actionText} this user?`
        );
        return confirmAction;
      }
    </script>
  </body>
</html>
