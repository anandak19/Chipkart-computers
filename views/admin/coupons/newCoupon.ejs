<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel</title>
    <%- include("../../partials/adminHead") %>
    <link rel="stylesheet" href="/styles/adminPages/newCoupon.css" />
  </head>
  <body>
    <!-- Sidebar -->
    <%- include("../../partials/adminSidebar") %>

    <!-- Main Content -->
    <div class="content-wrapper">
      <!-- Navbar -->
      <%- include("../../partials/adminHeader") %>

      <div class="main-content">
        <div class="page-head-section">
          <button class="back-button" id="backButton">Back</button>
        </div>

        <!-- form  -->
        <div class="coupon-form-container">
          <form id="newCouponForm" class="px-4">
            <!-- First Row -->
            <div class="row">
              <div class="col-md-3">
                <label class="form-label">Coupon Code</label>
                <input
                  type="text"
                  class="form-control"
                  id="couponCode"
                  placeholder="Enter code"
                />
                <small class="text-danger" id="couponCodeError"></small>
              </div>
              <div class="col-md-3">
                <label class="form-label">Discount (%)</label>
                <input
                  type="number"
                  class="form-control"
                  id="discount"
                  placeholder="Discount"
                />
                <small class="text-danger" id="discountError"></small>
              </div>
              <div class="col-md-3">
                <label class="form-label">Min Order Amount</label>
                <input
                  type="number"
                  class="form-control"
                  id="minOrderAmount"
                  placeholder="Min Order"
                />
                <small class="text-danger" id="minOrderAmountError"></small>
              </div>
              <div class="col-md-3">
                <label class="form-label">Start Date</label>
                <input type="date" class="form-control" id="startDate" />
                <small class="text-danger" id="startDateError"></small>
              </div>
            </div>

            <!-- Second Row -->
            <div class="row mt-3">

              <div class="col-md-3">
                <label class="form-label">End Date</label>
                <input type="date" class="form-control" id="endDate" />
                <small class="text-danger" id="endDateError"></small>
              </div>

              <div class="col-md-6">
                <label class="form-label">Description</label>
                <input
                  type="text"
                  class="form-control description-field"
                  id="description"
                  placeholder="Enter description"
                />
                <small class="text-danger" id="descriptionError"></small>
              </div>
            </div>

            <!-- Submit Button -->
            <div class="text-center mt-4">
              <button type="submit" class="btn btn-primary px-4 w-25">
                Save
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <%- include("../../partials/adminFooter") %> <% if(edit) { %>
    <script src="/javascripts/admin/editCoupon.js"></script>
    <% } else { %>
    <script src="/javascripts/admin/newCoupon.js"></script>
    <% } %>
  </body>
</html>
