<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel</title>

    <%- include("../../partials/adminHead") %>
  </head>
  <body>
    <!-- Sidebar -->
    <%- include("../../partials/adminSidebar") %>

    <!-- Main Content -->
    <div class="content-wrapper">
      <!-- Navbar -->
      <%- include("../../partials/adminHeader") %>

      <div class="main-content">
        <div class="manage-page">
          <div class="search-box">
            <form
              action="/admin/products/search"
              method="get"
              class="search-form"
            >
              <input
                type="search"
                name="query"
                id="query"
                placeholder="Search Product"
              />
              <button type="submit">Search</button>
              <small id="errorMessage" class="text-danger"></small>
            </form>
          </div>
          <div class="add-new">
            <a href="/admin/products/new" class="btn btn-success">
              <img src="/images/icons/add-white.png" alt="" class="btn-icon" />
              Add New Product
            </a>
          </div>
        </div>

        <!-- table of category  -->
        <table class="table">
          <thead>
            <tr>
              <th>No</th>
              <th>Product</th>
              <th>Product Name</th>
              <th>Category</th>
              <th>Brand</th>
              <th>MRP</th>
              <th>Discount %</th>
              <th>Final Price</th>
              <th>Stock</th>
              <th>Add / Change Offer</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="productsTableBody">
            <tr>
              <td colspan="11" style="text-align: center">Loading</td>
            </tr>
          </tbody>
        </table>

        <div class="pagination">
          <div class="pagination-btns">
            <button class="prev-btn">
              <i class="fa-solid fa-chevron-left"></i>
            </button>
            <button class="next-btn">
              <i class="fa-solid fa-chevron-right"></i>
            </button>
          </div>
        </div>


      </div>
    </div>

    <%- include("../../partials/adminFooter") %>
    <script src="/javascripts/admin/productManagement.js"></script>
  </body>
</html>
