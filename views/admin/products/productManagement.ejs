<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel</title>

    <%- include("../../partials/adminHead") %>
  </head>
  <body>
    <!-- Sidebar -->
    <%- include("../../partials/adminSidebar") %>

    <!-- Main Content -->
    <div class="content-wrapper">
      <!-- Navbar -->
      <%- include("../../partials/adminHeader") %>

      <div class="main-content">
        <div class="manage-page">
          <div class="search-box">
            <form
              action="/admin/products/search"
              method="get"
              class="search-form"
            >
              <input
                type="search"
                name="query"
                id="query"
                placeholder="Search Product"
                required
                value="<%= searchQuery || '' %>"
              />
              <button type="submit">Search</button>
              <small id="errorMessage" class="text-danger"></small>
            </form>
          </div>
          <div class="add-new">
            <a href="/admin/products/new" class="btn btn-success">
              <img src="/images/icons/add-white.png" alt="" class="btn-icon" />
              Add New Product
            </a>
          </div>
        </div>

        <!-- table of category  -->
        <table class="table">
          <thead>
            <tr>
              <th>No</th>
              <th>Product</th>
              <th>Product Name</th>
              <th>Category</th>
              <th>Brand</th>
              <th>MRP</th>
              <th>Discount %</th>
              <th>Final Price</th>
              <th>Stock</th>
              <th>Add / Change Offer</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="productsTableBody">
            <% if (productsArray.length === 0) { %>
            <tr>
              <td colspan="8" class="text-center">No Products found</td>
            </tr>
            <% } else { %> <% productsArray.forEach((product, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td>
                <img
                  src="<%= product.images[0].filepath ? product.images[0].filepath : '/images/default/default.jpg' %>"
                  alt="<%= product.productName %>"
                  style="width: 100px; height: auto"
                />
              </td>

              <td><%= product.productName %></td>
              <td><%= product.categoryDetails.categoryName %></td>
              <td><%= product.brand %></td>
              <td><%= product.mrp %></td>
              <td><%= product.discount %></td>
              <td><%= product.finalPrice %></td>
              <td><%= product.quantity %></td>
              <td><a href="/admin/offers/apply/<%= product._id %>?type=product" class="btn btn-primary btn-sm mt-2">Offer</a></td>
              <td>
                <form action="/admin/products/toggle-listed/<%= product._id %>" method="post" style="display: inline">
                <button class="btn <%= product.isListed ? 'btn-danger' : 'btn-success' %> btn-sm">
                  <%= product.isListed ? 'Unlist' : 'List' %>
                </button>
              </form>
                <a href="/admin/products/edit/<%= product._id %>" class="btn btn-primary btn-sm mt-2">Edit</a>
              </td>
            </tr>
            <% }); %> <% } %>
          </tbody>
        </table>


        <!-- pagination  -->
        <div class="pagination">
          <form action="/admin/products" method="get" style="display: inline;">
            <input type="hidden" name="page" value="<%= currentPage - 1 %>">
            <button type="submit" <% if (currentPage <= 1) { %> disabled <% } %>>Previous</button>
          </form>
      
          <span>Page <%= currentPage %> of <%= totalPages %></span>
      
          <form action="/admin/products" method="get" style="display: inline;">
            <input type="hidden" name="page" value="<%= currentPage + 1 %>">
            <button type="submit"  <% if (currentPage >= totalPages) { %> disabled <% } %>>Next</button>
          </form>
        </div>

      </div>
    </div>

    <%- include("../../partials/adminFooter") %>
    <script src="/javascripts/admin/productManagement.js"></script>
  </body>
</html>
