<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <link rel="stylesheet" href="/styles/admin.css" />
</head>
<body>

    <!-- Sidebar -->
<div class="sidebar">
    <h3 class="text-white text-center">Chipkart Admin</h3>
    <a href="#" class="sidebar-active"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
    <a href="#"><i class="fas fa-users"></i> User Management</a>
    <a href="#"><i class="fas fa-cogs"></i> Product Management</a>
    <a href="#"><i class="fas fa-tags"></i> Category Management</a>
    <a href="#" class="sidebar-active"><i class="fas fa-gift"></i> Offer Module</a>
    <a href="#"><i class="fas fa-box"></i> View Orders</a>
    <a href="#"><i class="fas fa-chart-line"></i> Sales Report</a>
    <a href="#"><i class="fas fa-gift"></i> Coupon Management</a>
</div>

<!-- Main Content -->
<div class="content-wrapper">
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Admin Dashboard</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link btn bg-danger text-white" href="#">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>



    <div class="main-content">
        <h1>Welcome to the Admin Dashboard</h1>
        <p>This is the main area for managing the website content and settings.</p>


        <!-- Example Tables or Components -->
        <div class="mt-4">
            <h2>Product List</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Product Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>Product 1</td>
                        <td>$50</td>
                        <td><button class="btn btn-warning">Edit</button></td>
                    </tr>
                    <tr>
                        <th scope="row">2</th>
                        <td>Product 2</td>
                        <td>$100</td>
                        <td><button class="btn btn-warning">Edit</button></td>
                    </tr>
                    <tr>
                        <th scope="row">3</th>
                        <td>Product 3</td>
                        <td>$150</td>
                        <td><button class="btn btn-warning">Edit</button></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

</div>

<!-- Bootstrap JS and Dependencies -->
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

</body>
</html>
