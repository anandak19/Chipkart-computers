<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- Font Awesome Icons -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="/styles/admin.css" />
  </head>
  <body>
    <!-- Sidebar -->
    <div class="sidebar">
      <h3 class="text-white text-center">Chipkart Admin</h3>
      <a href="/admin"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
      <a href="/admin/users"><i class="fas fa-users"></i> User Management</a>
      <a href="/admin/products"
        ><i class="fas fa-cogs"></i> Product Management</a
      >
      <a href="/admin/categories" class="sidebar-active"
        ><i class="fas fa-tags"></i> Category Management</a
      >
      <a href="/admin/offers"><i class="fas fa-gift"></i> Offer Module</a>
      <a href="/admin/orders"><i class="fas fa-box"></i> View Orders</a>
      <a href="/admin/reports"
        ><i class="fas fa-chart-line"></i> Sales Report</a
      >
      <a href="/admin/coupons"><i class="fas fa-gift"></i> Coupon Management</a>
    </div>

    <!-- Main Content -->
    <div class="content-wrapper">
      <!-- Navbar -->
      <%- include("../partials/adminHeader") %>

      <div class="main-content">
        <!-- search box and add new  -->
        <div class="manage-page">
          <div class="search-box">
            <form
              action="/admin/categories/search"
              method="get"
              class="search-form"
            >
              <input
                type="search"
                name="query"
                id="query"
                placeholder="Search Category"
                required
              />
              <button type="submit">Search</button>
              <small id="errorMessage" class="text-danger"></small>
            </form>
          </div>
          <div class="add-new">
            <a href="/admin/categories/new" class="btn btn-success">
              <img src="/images/icons/add-white.png" alt="" class="btn-icon" />
              Add New Category
            </a>
          </div>
        </div>
        <!-- table of category  -->
        <table class="table">
          <thead>
            <tr>
              <th>No</th>
              <th>Category Name</th>
              <th>Products Count</th>
              <th>Created At</th>
              <th>Last Updated At</th>
              <th>Is Listed</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% if (categoriesArray.length === 0) { %>
            <tr>
              <td colspan="8" class="text-center">No categories found</td>
            </tr>
            <% } else { %> <% categoriesArray.forEach((category, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= category.categoryName %></td>
              <td><%= index + 1 %></td>
              <td>
                <%= new Date(category.createdAt).toLocaleDateString('en-GB', {
                day: '2-digit', month: '2-digit', year: 'numeric' }) %>
              </td>
              <td>
                <%= new Date(category.updatedAt).toLocaleDateString('en-GB', {
                day: '2-digit', month: '2-digit', year: 'numeric'}) %>
              </td>
              <td><%= category.isListed ? 'Yes' : 'No' %></td>
              <td>
                <form
                  action="/admin/categories/toggle-listed/<%= category.id %>"
                  method="post"
                  style="display: inline"
                >
                  <button
                    class="btn <%= category.isListed ? 'btn-success' : 'btn-danger' %> btn-sm"
                  >
                    <%= category.isListed ? 'List' : 'Unlist' %>
                  </button>
                  <button class="btn btn-primary btn-sm">Edit</button>
                </form>
              </td>
            </tr>
            <% }); %> <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Bootstrap JS and Dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
  </body>
</html>
